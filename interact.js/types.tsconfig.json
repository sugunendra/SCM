{
  "include": ["packages/@interactjs", "shims.d.ts"],
  "exclude": ["**/*.spec.ts", "packages/@interactjs/vue", "packages/@interactjs/react"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "skipLibCheck": true,

    "strict": false
  }
}
